@model Alumno

@{
}
 

<div class="container col-12">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Curso Actual</label>
                    <input asp-for="Curso.Nombre" id="disabledInput" class="form-control" disabled />

                    <a class="btn-group" asp-route-id="@Model.CursoId" asp-controller="Curso" asp-action="Details">Detalle del Curso</a>
                    

                </div>

                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="CursoId" class="control-label">Cambiar de curso</label>
                        <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
                    </div>
                </div>
                
                <!--Detalles del curso-->

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div> 